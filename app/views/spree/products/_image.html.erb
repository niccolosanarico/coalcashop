<% if defined?(image) && image %>
  <%= image_tag image.attachment.url(:product), :itemprop => "image", :options => { "data-toggle" => "modal", "data-target" => "img-modal"} %>
<% else %>
  <%= link_to product_image(@product, :itemprop => "image"), "#", data: {toggle: "modal", target: "#img-modal"}%>
<% end %>
